        <!--&lt;!&ndash;<appender-ref ref="error"/>&ndash;&gt;-->
        <!--<appender-ref ref="STDOUT"/>-->
    <!--</logger>-->
    <root level="info">
        <appender-ref ref="error"/>
        <appender-ref ref="info" />
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>